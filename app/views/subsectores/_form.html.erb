<%= form_for(@subsectore, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @subsectore.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@subsectore.errors.count, "error") %> prohibited this subsectore from being saved:</h2>
      <ul>
      <% @subsectore.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <div class="control-label">
      <%= f.label :sectore_id %>
    </div>
    <div class="controls">
      <%= f.select :sectore_id, Sectore.all.collect { |x| [x.descripcion, x.id] }, {}, :class => "span5" %>
    </div>
  </div>  

  <div class="control-group">
    <div class="control-label">
      <%= f.label :codigo %>
    </div>
    <div class="controls">
      <%= f.text_field :codigo, :class => "span2" %>
    </div>
  </div>

  <div class="control-group">
    <div class="control-label">
      <%= f.label :descripcion %>
    </div>
    <div class="controls">
      <%= f.text_field :descripcion, :class => "span5" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit :class => "btn" %>  
    </div>    
  </div>
<% end %>
