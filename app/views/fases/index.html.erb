<ul class="breadcrumb">
  <li><%= link_to "Partidas de Control", partidasdecontrols_path %> <span class="divider">/</span></li>  
  <li class="active">Fases</li>
</ul>


<div class="page-header">
  <h1>Lista de Fases</h1>  
</div>


<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Codigo</th>
    <th>Descripcion</th>
    <th>Acciones</th>
  </tr>

<% @fases.each do |fase| %>
  <tr>
    <td><%= fase.codigo %></td>
    <td><%= fase.descripcion %></td>
    <td>
      <%= link_to raw('<i class="icon-eye-open"></i>'), fase, :class => "btn btn-small" %>
      <%= link_to raw('<i class="icon-edit"></i>'), edit_fase_path(fase), :class => "btn btn-small" %>
      <%= link_to raw('<i class="icon-trash"></i>'), fase, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-small" %>
    </td>
  </tr>
<% end %>
</table>

<div class="form-actions">
  <%= link_to raw('<i class="icon-user icon-white"></i> Nueva Fase'), new_fase_path, :class => "btn btn-primary" %>  
</div>

