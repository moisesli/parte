<div class="page-header">
  <h1>Repositorio de Partidas</h1>  
</div>


<%= will_paginate(@listas, :renderer => WillPaginate::ActionView::LinkRenderer) %>

<table class="table table-bordered table-striped">
  <tr>
    <th>#Id</th>
    <th>Nombre</th>
    <th>Acciones</th>
  </tr>

<% @listas.each do |lista| %>
  <tr>
    <td><%= lista.id %></td>
    <td><%= lista.nombre %></td>
    <td>
      <%= link_to raw('<i class="icon-eye-open"></i>'), lista, :class => "btn btn-small" %>
      <%= link_to raw('<i class="icon-edit"></i>'), edit_lista_path(lista), :class => "btn btn-small" %>
      <%= link_to raw('<i class="icon-trash"></i>'), lista, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-small" %>
    </td>
  </tr>
<% end %>
</table>



<br />
<div class="form-actions">
  <%= link_to raw('<i class="icon-user icon-white"></i> Nueva Lista'), new_lista_path, :class => "btn btn-primary" %>
  <%= link_to raw("<i class='icon-user icon-white'></i> Grupos de Partidas"), listacategorias_path, :class => "btn btn-primary" %>  
</div>

