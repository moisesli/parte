<div class="page-header">
    <h1>Equipos Registrados :</h1>    
</div>

<%= will_paginate(@equipos, :renderer => WillPaginate::ActionView::LinkRenderer) %>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>#Id</th>
    <th>Descripcion</th>
    <th>Unidad</th>
    <th>Cantidad</th>
    <th>Numeroparte</th>
    <th>Partidacontrol</th>
    <th>Observacion</th>
    <th>Parteobra</th>
    <th>Acciones</th>    
  </tr>

<% @equipos.each do |equipo| %>
  <tr>
    <td><%= equipo.id %></td>
    <td><%= equipo.descripcion %></td>
    <td><%= equipo.unidad %></td>
    <td><%= equipo.cantidad %></td>
    <td><%= equipo.numeroparte %></td>
    <td><%= equipo.partidacontrol %></td>
    <td><%= equipo.observacion %></td>
    <td><%= equipo.parteobra_id %></td>
    <td>
        <%= link_to raw('<i class="icon-eye-open"></i>'), equipo, :class => "btn btn-small" %>
        <%= link_to raw('<i class="icon-edit"></i>'), edit_equipo_path(equipo), :class => "btn btn-small" %>
        <%= link_to raw('<i class="icon-trash"></i>'), equipo, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-small" %>
    </td>
  </tr>
<% end %>
</table>

